<div class="container mt-3 py-3"
  style="border:2px solid rgb(40, 26, 121);width:30rem; background-color:rgb(80, 167, 211)">
  <div class="d-flex flex-column align-items-center">
    <h2>URL shorter</h2>
    <img style="width:10rem"
      src="https://assets-lighthouse.alphacamp.co/uploads/image/file/16716/ExportedContentImage_00.png" alt="圖片">
    <form class="input-group mt-3" action="/" method="POST">
      <label class="form-label" for="url"></label>
      <input class="form-control" type="url" id="url" name="url" placeholder="Input URL here..." value="{{originalURL}}"
        required>
      <div class="input-group-append">
        <button type="submit" class="btn btn-success">Shorter</button>
      </div>
    </form>
  </div>
  {{#if shorterURL}}
  <div class="alert alert-success mt-3" role="alert">
    <h5 class="alert-heading">Shorter Successfully !!!</h5>
    <a href="/show/{{shorterURL}}">{{localURL}}/{{shorterURL}}</a>
  </div>
  {{!-- {{else}}
  <div class="alert alert-danger mt-3" role="alert">
    <h5 class="alert-heading">Cannot Shorten the URL !!!</h5>
    <p>The URL is not valid.</p>
  </div> --}}
  {{/if}}
</div>